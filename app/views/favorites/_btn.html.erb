<% if post.favorited_by?(current_user) %>
  <%= link_to favorites_path(params: { post_id: post.id }), data: { "turbo-method": :delete } do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <p style="color:red">いいね<%= post.favorites.count %> </p>
  <% end %>
<% else %>

    <%= link_to favorites_path(params: { post_id: post.id }), data: { "turbo-method": :post } do%>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <p style="color:blue">いいね<%= post.favorites.count %>  </p>
    <% end %>
<% end %>
