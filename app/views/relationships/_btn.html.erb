<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", relationships_path(params: {user_id: user.id}), data: { "turbo-method": :delete }%>
  <% elsif current_user.pending_follow_request?(user) %>
    <%= link_to "リクエスト済み", relationships_path(params: {user_id: user.id}), data: { "turbo-method": :delete }, class: "text-gray-500" %>
  <% else %>
    <%= link_to "フォローする", relationships_path(params: {user_id: user.id}), data: { "turbo-method": :post }%>
  <% end %>
<% end %>
