<% if post.retweeted_by?(current_user) %>
  <%= link_to retweets_path(post_id: post.id), data: { turbo_method: :delete }, class: "text-green-500" do %>
    <i class="fas fa-retweet"></i> <%= post.retweets.count %>
  <% end %>
<% else %>
  <%= link_to retweets_path(post_id: post.id), data: { turbo_method: :post }, class: "text-gray-500 hover:text-green-500" do %>
    <i class="fas fa-retweet"></i> <%= post.retweets.count %>
  <% end %>
<% end %>